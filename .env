# iDRAC Connection
IDRAC_HOST=192.168.1.100
IDRAC_USER=fanscript
IDRAC_PASS=yourpassword

# SNMP
SNMP_COMMUNITY=public
SNMP_VERSION=1

# Fan Speed Control
FAN_MIN=20        # Minimum fan % (duty cycle)
FAN_MAX=90        # Maximum fan %
SAFE_TEMP=65      # °C where fans ramp to 100%
CRIT_TEMP=75      # °C revert to auto fan control
INTERVAL=30       # Seconds between checks

# Optional Prometheus Metrics
ENABLE_METRICS=false   # set to true to enable
METRICS_PORT=9100
